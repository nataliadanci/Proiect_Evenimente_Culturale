@page
@model Proiect_MP1.Pages.Registrations.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h3>Ștergere înregistrare eveniment</h3>

<p>Sunteți sigur că doriți să ștergeți acest lucru?</p>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Registration.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Registration.User.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Registration.Eveniment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Registration.Eveniment.Nume)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Registration.RegistrationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Registration.RegistrationDate)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Registration.ID" />
        <input type="submit" value="Șterge" class="btn btn-danger" /> |
        <a asp-page="./Index">Înapoi la listă</a>
    </form>
</div>
