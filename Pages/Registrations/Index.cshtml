@page
@model Proiect_MP1.Pages.Registrations.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Înregistrări evenimente</h2>

<p>
    <a asp-page="Create" style="color:#212529">Creați</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Registration[0].User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Registration[0].Eveniment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Registration[0].RegistrationDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Registration) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Eveniment.Nume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegistrationDate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Editează</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Detalii</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Șterge</a>
            </td>
        </tr>
}
    </tbody>
</table>
