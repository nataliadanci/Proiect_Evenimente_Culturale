@page
@model Proiect_MP1.Pages.Registrations.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h3>Editare înregistrare eveniment</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Registration.ID" />
            <div class="form-group">
                <label asp-for="Registration.UserID" class="control-label"></label>
                <select asp-for="Registration.UserID" class="form-control" asp-items="ViewBag.UserID"></select>
                <span asp-validation-for="Registration.UserID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Registration.EvenimentID" class="control-label"></label>
                <select asp-for="Registration.EvenimentID" class="form-control" asp-items="ViewBag.EvenimentID"></select>
                <span asp-validation-for="Registration.EvenimentID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Registration.RegistrationDate" class="control-label"></label>
                <input asp-for="Registration.RegistrationDate" class="form-control" />
                <span asp-validation-for="Registration.RegistrationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvare" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Înapoi la listă</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
