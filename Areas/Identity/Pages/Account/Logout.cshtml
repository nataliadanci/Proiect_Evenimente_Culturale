@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<header>
    <h2>Deconectare</h2>
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Apasă aici pentru a te deconecta</button>
            </form>
        }
        else
        {
            <p>Deconectare reușită.</p>
        }
    }
</header>
